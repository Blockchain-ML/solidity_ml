contract CappedCrowdsale is Crowdsale {
  using SafeMath for uint256;

  uint256 public cap;

   
  constructor(uint256 _cap) public {
    require(_cap > 0);
    cap = _cap;
  }

   
  function capReached() public view returns (bool) {
    return weiRaised >= cap;
  }

   
  function _preValidatePurchase(
    address _beneficiary,
    uint256 _weiAmount
  )
    internal
  {
    super._preValidatePurchase(_beneficiary, _weiAmount);
    require(weiRaised.add(_weiAmount) <= cap);
  }

}

 

 
contract TimedCrowdsale is Crowdsale {
  using SafeMath for uint256;

  uint256 public openingTime;
  uint256 public closingTime;

   
  modifier onlyWhileOpen {
     
    require(block.timestamp >= openingTime && block.timestamp <= closingTime);
    _;
  }

   
  constructor(uint256 _openingTime, uint256 _closingTime) public {
     
    require(_openingTime >= block.timestamp);
    require(_closingTime >= _openingTime);

    openingTime = _openingTime;
    closingTime = _closingTime;
  }

   
  function hasClosed() public view returns (bool) {
     
    return block.timestamp > closingTime;
  }

   
  function _preValidatePurchase(
    address _beneficiary,
    uint256 _weiAmount
  )
    internal
    onlyWhileOpen
  {
    super._preValidatePurchase(_beneficiary, _weiAmount);
  }

}

 

 
contract FinalizableCrowdsale is TimedCrowdsale, Ownable {
  using SafeMath for uint256;

  bool public isFinalized = false;

  event Finalized();

   
  function finalize() onlyOwner public {
    require(!isFinalized);
    require(hasClosed());

    finalization();
    emit Finalized();

    isFinalized = true;
  }

   
  function finalization() internal {
  }

}

 

 

contract DappTokenCrowdsale is Crowdsale, MintedCrowdsale, CappedCrowdsale, TimedCrowdsale, FinalizableCrowdsale {
    MintableToken public token;
    uint256 openingTime;
    uint256 closingTime;

    uint256 public icoPrivatesaleDate;
		uint256 public icoPresaleDate = 1546329600;     
		uint256 public icoPublicsaleDate = 1549008000;    
		uint256 public icoEndDate;
    bool public isStopICO = false;

    enum CrowdsaleStage { PrivateICO, PreICO, PublicICO }
    CrowdsaleStage public stage = CrowdsaleStage.PrivateICO;  

    constructor(
      uint256 _rate,
      address _wallet,
      MintableToken _token,
      uint256 _cap,
      uint256 _openingTime,
      uint256 _closingTime
    )
    Crowdsale(_rate, _wallet, _token)
    CappedCrowdsale(_cap)
    TimedCrowdsale(_openingTime, _closingTime)
    FinalizableCrowdsale()
    MintedCrowdsale()
    public
    {
      token = _token;
      icoPrivatesaleDate = _openingTime;
      icoEndDate = _closingTime;
    }

    function () external payable {
      require(icoPrivatesaleDate < now);
			require(icoEndDate > now);
      require(isStopICO != true);

      buyTokens(msg.sender);
    }

    function buyTokens(address _beneficiary) public payable {
      require(icoPrivatesaleDate < now);
      require(icoEndDate > now);
      require(isStopICO != true);

      uint256 weiAmount = msg.value;
      _preValidatePurchase(_beneficiary, weiAmount);

       
      uint256 tokens = _getTokenAmount(weiAmount);

       
      weiRaised = weiRaised.add(weiAmount);

      _processPurchase(_beneficiary, tokens);
      emit TokenPurchase(
        msg.sender,
        _beneficiary,
        weiAmount,
        tokens
      );

      _updatePurchasingState(_beneficiary, weiAmount);

      _forwardFunds();
      _postValidatePurchase(_beneficiary, weiAmount);
    }

    function setCrowdsaleStage(uint value) public onlyOwner {
      CrowdsaleStage _stage;

      if (uint(CrowdsaleStage.PrivateICO) == value) {
        _stage = CrowdsaleStage.PrivateICO;
      } else if (uint(CrowdsaleStage.PreICO) == value) {
        _stage = CrowdsaleStage.PreICO;
      } else if (uint(CrowdsaleStage.PublicICO) == value) {
        _stage = CrowdsaleStage.PublicICO;
      }

      stage = _stage;

      if (stage == CrowdsaleStage.PrivateICO || stage == CrowdsaleStage.PublicICO) {
        setCurrentRate(1000);
      } else if (stage == CrowdsaleStage.PreICO) {
        setCurrentRate(1150);
      }
    }

     
    function setCurrentRate(uint256 _rate) private {
      rate = _rate;
    }

		 
		 
		 
		 
		 
		function updateCrowdsale(uint256 icoPrivatesale, uint256 icoPresale, uint256 icoPublicsale, uint256 icoEnd) onlyOwner public {      
      require(icoPrivatesaleDate < icoEnd);
			icoPrivatesaleDate = icoPrivatesale;
			icoPresaleDate = icoPresale;
			icoPublicsaleDate = icoPublicsale;
			icoEndDate = icoEnd;
    }
        
     
     
		function stopICO() onlyOwner public{
      isStopICO = true;
    }

     
     
		function startICO() onlyOwner public{
      isStopICO = false;
    }
        
     
     
    function icoStatus() public view returns(string){
        if(icoEndDate < now ){
            return "ICO is over";
        }else if(icoPrivatesaleDate < now && icoPresaleDate > now ){
            return "Private Sale is running";
        }else if(icoPresaleDate < now && icoPublicsaleDate > now){
            return "Pre ICO is running";
        }else if(icoPublicsaleDate < now && icoEndDate > now){
            return "Public ICO is running";
        }else{
            return "ICO is over";
        }
    }

    function finalization() internal {
      token.transferOwnership(msg.sender);
      super.finalization();
    }
}