contract rewardRandom is Ownable{
    using SafeMath for uint256;
    event rewardResult(uint _num,uint _time);
    function randomReward(uint[] _arr) public onlyOwner returns (uint playerId){ 
        uint rdId = uint256(keccak256(block.difficulty,now))%10000;
